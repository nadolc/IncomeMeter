{
  "DatabaseSettings": {
    "DatabaseName": "incomemterdev",
    "UsersCollectionName": "users",
    "RoutesCollectionName": "routes",
    "LocationsCollectionName": "locations",
    "TransactionsCollectionName": "transactions"
  },

  "GeocodingSettings": {
    "MaxDistanceKm": 50,
    "CoordinatePrecision": 6,
    "OpenCageBaseUrl": "https://api.opencagedata.com/geocode/v1/json",
    "OpenRouteServiceBaseUrl": "https://api.openrouteservice.org/v2/directions/driving-car"
  },


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DetailedErrors": true, 


  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting": "Information",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "System": "Warning",
        "MongoDB.Driver": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%HOME%/LogFiles/incomemeter-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "fileSizeLimitBytes": 10485760
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "IncomeMeter.Api",
      "Environment": "Development"
    }
  }
}