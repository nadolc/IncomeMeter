# IncomeMeter API Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =================================================================
# Azure Configuration
# =================================================================
AZURE_TENANT_ID=your-azure-tenant-id-here
AZURE_CLIENT_ID=your-azure-client-id-here
KEY_VAULT_URI=https://your-keyvault-name.vault.azure.net/

# =================================================================
# Database Configuration
# =================================================================
MONGO_CONNECTION_STRING=mongodb+srv://username:password@your-cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DATABASE_NAME=your-database-name

# =================================================================
# Google OAuth Configuration  
# =================================================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
JWT_SECRET=your-jwt-secret-key-here

# =================================================================
# Geocoding API Configuration
# =================================================================
OPENCAGE_API_KEY=your-opencage-api-key-here
OPENROUTESERVICE_API_KEY=your-openrouteservice-api-key-here

# =================================================================
# Application Configuration
# =================================================================
ASPNETCORE_ENVIRONMENT=Development
USE_KEY_VAULT=false

# Frontend and API Base URLs (used for OAuth redirects and CORS)
FRONTEND_BASE_URL=https://your-frontend-domain.com
API_BASE_URL=https://your-api-domain.com

# CORS Allowed Origins (comma-separated)
ALLOWED_CORS_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# =================================================================
# Logging Configuration (Optional)
# =================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=your-appinsights-connection-string-here